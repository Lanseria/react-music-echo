input[type=range]
    flex: 1
    -webkit-appearance: none
    width: 100%
    border-radius: 10px
    margin: 0 10px
    cursor: pointer

input[type=range]::-webkit-slider-thumb
    -webkit-appearance: none

input[type=range]::-webkit-slider-runnable-track
    height: 4px;
    border-radius: 2.5px
    background: #21be8e

input[type=range]:focus
    outline: none

input[type=range]::-webkit-slider-thumb
    -webkit-appearance: none;
    height: 5px;
    width: 5px;
    margin-top: -1px;
    margin-right: -3px;
    background: #21be8e;
    border-radius: 50%;
    border: 3px solid #fff;
    box-shadow: 0 0 0 1px #d0d0d0;